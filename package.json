{
  "name": "test-web",
  "private": true,
  "scripts": {
    "backend:dev": "yarn workspace @backend/gateway dev",
    "frontend:dev": "yarn workspace @frontend/dashboard dev",
    "typecheck": "lerna run typecheck",
    "lint": "tslint --project tsconfig.json -c tslint.json -t codeFrame backend/**/*.ts"
  },
  "devDependencies": {
    "lerna": "3.15.0",
    "tslint": "^5.17.0",
    "husky": "^2.4.1"
  },
  "workspaces": [
    "backend/*",
    "frontend/*",
    "frontend/ui/*",
    "frontend/utils/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  }
}
